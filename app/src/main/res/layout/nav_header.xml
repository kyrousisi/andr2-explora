<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="#242625"
    android:padding="12dp"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageAppBarMainId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:civ_border_color="#B5A200"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nameAppBarMainId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/imageAppBarMainId"
        android:text="Name"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/emailAppBarMainId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameAppBarMainId"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/imageAppBarMainId"
        android:text="Email"
        android:textColor="#E4E4E4" />

</RelativeLayout>